        android:defaultValue="@string/pref_filter_default_value"
        android:entries="@array/pref_filter_entries_listnames"
        android:entryValues="@array/pref_filter_entryvalues_listvalues"
        android:key="@string/pref_list_filtermovies_key"
        android:dialogTitle="@string/pref_filtermovies_dialogtitle"
        android:title="@string/pref_title_filtermovies"/>

</PreferenceScreen>
