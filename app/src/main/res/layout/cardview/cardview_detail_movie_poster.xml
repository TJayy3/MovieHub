<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="12dp"
    card_view:contentPadding="1dp"
    card_view:cardElevation="@dimen/detail_child_cardview_elvation">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/imageview_detail_movie_poster"
            android:layout_width="@dimen/detail_movie_poster_width"
            android:layout_height="@dimen/detail_movie_poster_height"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>